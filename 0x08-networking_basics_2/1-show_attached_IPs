#!/bin/bash

# Get all the interface names
interfaces=$(ifconfig | grep -o '^[^ ][^ ]*:' | tr -d :)

# Loop through the interfaces
for interface in $interfaces
do
  # Get the IPv4 address of the current interface
  ip=$(ifconfig $interface | grep 'inet ' | awk '{print $2}')
  
  # Check if the current interface has an IPv4 address
  if [ -n "$ip" ]
  then
    # Print the current interface and its IPv4 address
    echo "$interface: $ip"
  fi
